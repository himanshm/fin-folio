FROM node:22-alpine

RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /usr/app

COPY package.json pnpm-lock.yaml* ./

RUN pnpm install --frozen-lockfile

COPY . ./

RUN pnpm run build

EXPOSE 5173

# Run Vite dev server with host flag for Docker
CMD ["pnpm", "start"]
# CMD ["pnpm", "run", "dev", "--", "--host"]